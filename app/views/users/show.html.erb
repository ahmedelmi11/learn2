
<h1><%= @user.email %></h1>
<h1><%= @user.first_name %></h1>
<h1><%= @user.last_name %></h1>
<p>
  <%= link_to "Edit profile", edit_user_path(@user), class: "btn btn-primary"%>
</p>

<% if @user.technologies.any? %>
   <% @user.technologies.each do |tech| %>
      <span class="tech-tag <%= tech.name.downcase %>-tag"><%= tech.name %></span>
   <% end %>
   <%= link_to "Add new speciality", new_user_technology_path(@user), class: "btn btn-primary"%>
<% else %>
  <%= link_to "Become a teacher", new_user_technology_path(@user), class: "btn btn-primary"%>
<% end %>
